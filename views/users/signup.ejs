<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp on StaySphere</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" type="text" class="form-control"
                        placeholder="Add a unique username" required>

                    <div class="invalid-feedback">Username should be valid</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" type="email" class="form-control"
                        placeholder="Add email" required>

                    <div class="invalid-feedback">Email should be valid</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" type="password" class="form-control"
                        placeholder="Add password" required>

                    <div class="invalid-feedback">Password should be valid</div>
                </div>
              
                <button class="btn btn-success">SignUp</button>
            </form>
        </div>
    </div>